<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2d"
    tools:context=".PasswordActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/signup_card"
        android:layout_width="440dp"
        android:layout_height="370dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:transitionName="reset_trans_card"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501">


        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/textInputLayout3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="275dp"
            android:layout_height="59dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="140dp"
            app:boxStrokeColor="#B71C1C"
            app:circularflow_defaultRadius="5dp"
            app:hintTextColor="#383C3C">

            <EditText
                android:id="@+id/username_reset"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="48dp"
                android:ems="10"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Enter Email"
                android:inputType="textPersonName"
                android:textSize="12sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnreset"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"

            android:layout_width="211dp"
            android:layout_height="50dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="280dp"
            android:layout_marginBottom="156dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Submit"
            app:strokeColor="@color/trucking_200"
            app:strokeWidth="1.5dp" />

        <TextView
            android:id="@+id/forgot_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:text="Forgot Password"
            android:textColor="@color/trucking_grey"
            android:textColorHint="@color/trucking_200"
            android:textSize="24sp"
            android:transitionName="forgot_txt_transition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="46dp"
            android:layout_height="36dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="27dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/lock_icon" />

        <ImageButton
            android:id="@+id/Backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="22dp"
            android:backgroundTint="#00FFFFFF"
            android:rotation="180"
            android:tint="@color/grey"
            app:srcCompat="@drawable/arrow_forward" />
        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="25dp"
            android:rotation="0"
            app:srcCompat="@drawable/header_line" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>