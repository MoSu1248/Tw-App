<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_offline_alert">

    <androidx.cardview.widget.CardView
        android:id="@+id/signup_card"
        android:layout_width="434dp"
        android:layout_height="377dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:transitionName="offline_transition_card"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView

            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="No Internet Access"
            android:textColor="@color/trucking_grey"
            android:textSize="34sp" />

        <TextView

            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="260dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Please Use Offline Mode"
            android:textColor="@color/grey"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/btnForgotPasswordBack"
            android:layout_width="206dp"
            android:layout_height="137dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="55dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/no_internet" />

        <ImageButton
            android:id="@+id/imageView23"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="390dp"
            android:layout_marginTop="5dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/baseline_close_24" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>