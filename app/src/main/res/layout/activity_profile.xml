<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2d"
    android:windowSoftInputMode="adjustPan|adjustResize"
    tools:context=".Profile">


    <LinearLayout
        android:id="@+id/row12"
        android:layout_width="match_parent"
        android:layout_height="301dp"
        android:layout_marginTop="30dp"

        android:orientation="horizontal"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/session_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="2dp"
            app:cardElevation="5dp">

            <ImageButton
                android:id="@+id/Backbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="22dp"
                android:backgroundTint="#00FFFFFF"
                android:rotation="180"
                android:tint="@color/grey"
                app:srcCompat="@drawable/arrow_forward" />

            <ImageView
                android:id="@+id/request_image"
                android:layout_width="46dp"
                android:layout_height="36dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="27dp"
                android:transitionName="request_transition"
                app:srcCompat="@drawable/medical_rec" />

            <TextView
                android:id="@+id/textView41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="350dp"
                android:layout_marginTop="115dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="HIV Status"
                android:textColor="@color/trucking_200"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="200dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="ID Number"
                android:textColor="@color/trucking_200"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="350dp"
                android:layout_marginTop="200dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Cell Number"
                android:textColor="@color/trucking_200"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="44dp"
                android:layout_height="42dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="190dp"
                app:srcCompat="@drawable/id_card" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="37dp"
                android:layout_height="27dp"
                android:layout_marginStart="300dp"
                android:layout_marginTop="190dp"
                app:srcCompat="@drawable/cell_phone" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="115dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Client Name"
                android:textColor="@color/trucking_200"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/clientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:text="Client Details"
                android:textColor="#494949"
                android:textColorHint="@color/black"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="25dp"
                android:rotation="0"
                app:srcCompat="@drawable/header_line" />

            <TextView
                android:id="@+id/Name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/montserrat_light"
                android:textColor="#494949"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/Hiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="350dp"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/montserrat_light"
                android:textColor="#494949"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/Client_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="225dp"
                android:fontFamily="@font/montserrat_light"
                android:textColor="#494949"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/cellNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="350dp"
                android:layout_marginTop="225dp"
                android:fontFamily="@font/montserrat_light"
                android:textColor="#494949"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="32dp"
                android:layout_height="23dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="115dp"
                app:srcCompat="@drawable/user_profile" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="37dp"
                android:layout_height="31dp"
                android:layout_marginStart="300dp"
                android:layout_marginTop="115dp"
                app:srcCompat="@drawable/ribbon" />


            <ImageButton
                android:id="@+id/flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="405dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#00FFFFFF"

                app:srcCompat="@drawable/vector"
                android:visibility="invisible"
                />

            <ImageButton
                android:id="@+id/flag_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="416dp"
                android:layout_marginTop="25dp"
                android:visibility="invisible"
                android:background="@drawable/flag_empty" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/appointment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="345dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Appointment History"
        android:textColor="#494949"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="858dp"
        android:layout_height="644dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="10dp">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>