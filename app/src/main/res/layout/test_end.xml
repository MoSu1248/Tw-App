<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:background="@drawable/background_question_test"
    android:id="@+id/main_menu_scroll">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/signup_card"
            android:layout_width="594dp"
            android:layout_height="1040dp"
            android:layout_margin="50dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:transitionName="offline_transition_card"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.669"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/flag_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout

                    android:id="@+id/textInputLayout224"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="454dp"
                    android:layout_height="106dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="400dp"
                    android:layout_marginEnd="5dp"
                    android:hint="Flagging Reason"
                    app:boxCollapsedPaddingTop="10dp"
                    app:boxStrokeColor="#B71C1C"
                    app:circularflow_defaultRadius="5dp"
                    app:hintTextColor="#383C3C">

                    <com.google.android.material.textfield.TextInputEditText

                        android:id="@+id/flag_reason"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat_medium"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHighlight="#A55252"
                        android:textColorHint="#5A5858"
                        android:textColorLink="#B71C1C"
                        android:textSize="14sp" />


                </com.google.android.material.textfield.TextInputLayout>

                <RadioGroup
                    android:id="@+id/flag_user"
                    android:layout_width="209dp"
                    android:layout_height="86dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="300dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.212"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <RadioButton
                        android:id="@+id/flag_user_yes"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/radio_selector"
                        android:button="@android:color/transparent"
                        android:elevation="4dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Yes"
                        android:textAlignment="center"
                        android:textColor="@drawable/text_color"
                        app:layout_constraintEnd_toStartOf="@+id/female"
                        app:layout_constraintHorizontal_bias="0.689"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView7" />

                    <RadioButton
                        android:id="@+id/flag_user_no"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="384dp"
                        android:background="@drawable/radio_selector"
                        android:button="@android:color/transparent"
                        android:elevation="4dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="No"
                        android:textAlignment="center"
                        android:textColor="@drawable/text_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView7" />
                </RadioGroup>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="280dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Flag User?"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.154"
                    app:layout_constraintStart_toStartOf="parent" />

            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/textInputLayout22"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="454dp"
                android:layout_height="106dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="530dp"
                android:hint="Medication"
                app:boxCollapsedPaddingTop="10dp"
                app:boxStrokeColor="#B71C1C"
                app:circularflow_defaultRadius="5dp"
                app:hintTextColor="#383C3C"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/flag_user">

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/medication_field"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_medium"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHighlight="#A55252"
                    android:textColorHint="#5A5858"
                    android:textColorLink="#B71C1C"
                    android:textSize="14sp" />


            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:text="Client Overview"
                android:textColor="#494949"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="460dp"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Client Question Overview"
                android:textColor="@color/grey"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="TextView"
                android:textColor="@color/trucking_200"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />

            <Button
                android:id="@+id/submit"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="950dp"
                android:layout_marginBottom="84dp"
                android:background="@drawable/ripple_effect_outline"
                android:fontFamily="@font/montserrat_medium"
                android:shadowColor="#272424"
                android:text="SUBMIT"
                android:textColor="@drawable/btn_txt_color"
                android:textSize="14sp"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ExpandableListView
                android:id="@+id/elvMobiles"
                android:layout_width="454dp"
                android:layout_height="240dp"

                android:layout_marginStart="60dp"
                android:layout_marginTop="670dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout22"></ExpandableListView>

        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>