<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_failed_alert">


    <androidx.cardview.widget.CardView
        android:id="@+id/signup_card"
        android:layout_width="410dp"
        android:layout_height="439dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:transitionName="offline_transition_card"
        app:cardCornerRadius="2dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501">

        <Button
            android:id="@+id/confirm_flag"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="340dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Retry"
            android:textColor="@color/off_white" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="0dp"
            android:layout_marginTop="225dp"
            android:fontFamily="@font/open_sans"
            android:text="Please Check your internet Connection, Username and Password before trying again. "
            android:textAlignment="center"
            android:textColor="#B6B5B5"
            android:textSize="16sp" />


        <TextView

            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="0dp"
            android:layout_marginTop="170dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Login Failed"
            android:textColor="@color/trucking_grey"
            android:textSize="34sp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/btnForgotPasswordBack"
            android:layout_width="169dp"
            android:layout_height="116dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="0dp"
            android:layout_marginTop="60dp"
            android:background="@android:color/transparent"
            android:rotation="180"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_colorFilter="@color/trucking_200"

            app:lottie_fileName="Animationxs.json"
            app:lottie_speed="0.9" />

        <ImageButton
            android:id="@+id/imageView6"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="365dp"
            android:layout_marginTop="10dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/baseline_close_24" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>