<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash_screen">

    <ImageView
        android:id="@+id/nbcrfi_logo"
        android:layout_width="568dp"
        android:layout_height="398dp"
        android:layout_marginTop="244dp"
        android:contentDescription="NBCRFLI_ splash logo "
        android:transitionName="nbcrfli_transition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nbcrfli_logo" />

    <ImageView
        android:id="@+id/trucking_logo"
        android:layout_width="585dp"
        android:layout_height="348dp"
        android:contentDescription="Trucking wellness splash logo"
        android:transitionName="trucking_transition"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nbcrfi_logo"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/tw_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>