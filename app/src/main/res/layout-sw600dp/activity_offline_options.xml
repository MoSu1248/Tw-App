<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/offline_options_background"
    app:circularflow_defaultRadius="100dp"
    tools:context=".OfflineOptions">


    <androidx.cardview.widget.CardView
        android:id="@+id/top_container"
        android:layout_width="750dp"
        android:layout_height="288dp"
        android:layout_weight="1"
        android:transitionName="offline_transition_card"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="wrap_content"
            android:layout_height="177dp"
            android:layout_marginLeft="380dp"
            android:layout_marginTop="50dp"
            android:rotation="0"
            app:srcCompat="@drawable/header_line" />

        <ImageView
            android:id="@+id/offline_image"
            android:layout_width="420dp"
            android:layout_height="230dp"
            android:layout_marginStart="350dp"
            android:layout_marginTop="20dp"
            android:transitionName="offline_transition_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/offline_icon" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="286dp"
            android:layout_height="162dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="OFFLINE OPTIONS"
            android:textColor="#494949"
            android:textColorHint="@color/black"
            android:textSize="54sp"
            android:transitionName="offline_transition_txt"
            app:layout_constraintBottom_toTopOf="@+id/row2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="780dp"
        android:layout_height="581dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="160dp"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_container"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView
            android:id="@+id/register_offline_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:transitionName="register_trans_card"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/offline_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/offline_img"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="33dp"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:text="Register Offline Profile"
                    android:textColor="#494949"
                    android:textSize="32sp" />

                <ImageView
                    android:id="@+id/offline_img"
                    android:layout_width="186dp"
                    android:layout_height="170dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="87dp"
                    android:layout_marginTop="33dp"
                    android:layout_marginEnd="87dp"
                    android:src="@drawable/write"
                    android:transitionName="register_trans_img" />

                <TextView
                    android:id="@+id/homeName"
                    android:layout_width="290dp"
                    android:layout_height="102dp"
                    android:layout_below="@+id/offline_header"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="33dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="38dp"
                    android:fontFamily="@font/montserrat_light"
                    android:gravity="center"
                    android:text="Register yourself for offline capabilities in the application"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteX="-107dp"
                    tools:layout_editor_absoluteY="875dp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/reset_password_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:transitionName="reset_trans_card"
            app:cardCornerRadius="5dp"

            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/homeName2"
                    android:layout_width="290dp"
                    android:layout_height="102dp"
                    android:layout_below="@+id/beautyName"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="33dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="31dp"
                    android:fontFamily="@font/montserrat_light"
                    android:gravity="center"
                    android:text="Provide your email and reset your offline password"
                    android:textColor="#232323"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteX="-107dp"
                    tools:layout_editor_absoluteY="875dp" />

                <TextView
                    android:id="@+id/beautyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/setup_img"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="33dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:text="Reset Offline Password"
                    android:textColor="#494949"
                    android:textSize="32sp" />

                <ImageView
                    android:id="@+id/setup_img"
                    android:layout_width="182dp"
                    android:layout_height="178dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="104dp"
                    android:layout_marginTop="31dp"
                    android:layout_marginEnd="74dp"
                    android:src="@drawable/lock_icon"
                    android:transitionName="reset_trans_img" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/Backbtn"
        android:layout_width="152dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"

        android:layout_marginEnd="748dp"
        android:background="@android:color/transparent"
        android:rotation="180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:lottie_autoPlay="true"
        app:lottie_colorFilter="@color/trucking_grey"
        app:lottie_fileName="Animation_1702899041277.json"
        app:lottie_repeatCount="10000"
        app:lottie_speed="1" />


</androidx.constraintlayout.widget.ConstraintLayout>